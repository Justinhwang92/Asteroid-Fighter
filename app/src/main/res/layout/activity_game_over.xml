<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_over_background"
    tools:context=".Activity.Activity_Game_Over"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/gameOverTitile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asteroid Fighter"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="120px"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/gameOverMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameOverTitile"
            android:text="Game Over"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="100px"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/highScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/playAgainButton"
            android:text="High Score: 300"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:layout_centerHorizontal="true" />

