            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Try Again"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </RelativeLayout>

