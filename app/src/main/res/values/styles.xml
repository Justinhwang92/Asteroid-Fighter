<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_60sdp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textColor">#C69BF1</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">35</item>
    </style>

    <style name="MenuStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
<!--        <item name="android:focusable">auto</item>-->
<!--        <item name="android:focusableInTouchMode">true</item>-->
<!--        <item name="android:saveEnabled">true</item>-->
<!--        <item name="android:state_enabled">true</item>-->
<!--        <item name="android:state_focused">true</item>-->
        <item name="android:state_pressed">true</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BackStyle">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_marginLeft">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:src">@drawable/previous1</item>
    </style>

    <style name="MuteStyle">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_marginRight">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:src">@drawable/unmuted_audio</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_60sdp</item>
        <item name="android:layout_marginLeft">@dimen/_60sdp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@drawable/my_button_bg</item>
    </style>

    <style name="CreditStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="InstructionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ScoreStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ScoreListStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="InternStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.noActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="GameActivityStyle"></style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>